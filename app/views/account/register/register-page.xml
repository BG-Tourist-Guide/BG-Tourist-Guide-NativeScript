<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <Page.actionBar>
      <ActionBar>
        <ActionBar.titleView>
          <StackLayout orientation="horizontal"
            ios:horizontalAlignment="center"
            android:horizontalAlignment="left">
            <Label text="{{ title }}" class="action-bar-title" />
          </StackLayout>
        </ActionBar.titleView>
          <NavigationButton android.systemIcon="ic_menu_back" tap="backBtnTap"/>
      </ActionBar>
  </Page.actionBar>
  <StackLayout padding="50 20">
    <TextField hint="Username" text="{{ userName }}" margin="20" />
    <TextField hint="Password" text="{{ password }}" secure="true" margin="20" />
    <Button class="btn-success" text="Register" tap="registerBtnTap" />
  </StackLayout>
</Page>
