<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
  <AbsoluteLayout>
    <StackLayout id="slSideMenu" backgroundColor="#2fa4e7" width="85%" height="100%">
      <ScrollView>
        <StackLayout>
          <Label text="{{ title }}" class="title" color="#ffffff" textWrap="true" />
          <Button class="btn-warning" text="All tourist sites" tap="allBtnTap" />
          <Button class="btn-warning" text="Official tourist sites" tap="officialBtnTap" />
          <Button class="btn-warning" text="Unofficial tourist sites" tap="unofficialBtnTap" />
          <Button class="btn-warning" text="Add new tourist site" tap="addNewBtnTap" />
          <Button class="btn-warning" text="Settings" tap="settingsBtnTap" />
          <Button class="btn-warning" text="Logout" tap="logoutBtnTap" />
        </StackLayout>
      </ScrollView>
    </StackLayout>
    <StackLayout id="slMainMenu" width="100%" tap="slMainMenuTap" height="100%">
      <StackLayout horizontalAlignment="center"
          backgroundColor="#2fa4e7"
          width="100%">
        <StackLayout orientation="horizontal"
          margin="10">
          <Image src="res://menu"
            stretch ="none"
            margin="0 15 0 0"
            tap="menuImageTap" />
          <Label text="{{ title }}" fontSize="24" color="#ffffff" textWrap="true" />
        </StackLayout>
      </StackLayout>    
      <ScrollView marginTop="20">
        <StackLayout>
          <Button class="btn-success" text="Near me" tap="nearMeBtnTap" />
          <Button class="btn-success" text="Scan QR Code" tap="scanQrCodeBtnTap" />
        </StackLayout>
      </ScrollView>
    </StackLayout>
  </AbsoluteLayout>
</Page>
